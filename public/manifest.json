{
  "manifest_version": 3,
  "name": "WebAI",
  "version": "1.0.0",
  "description": "A Chrome extension that adds a sidebar to the left side of the browser.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage",
    "sidePanel", 
    "contextMenus",
    "webRequest",
    "downloads",
    "webNavigation",
    "notifications",
    "clipboardRead",
    "clipboardWrite",
    "file://*"
  ],
  "host_permissions": ["http://*/*", "https://*/*", "<all_urls>", "file:///*"],
    "background": {
    "service_worker": "background.js"
  },

  "side_panel": {
    "default_path": "index.html",
    "openPanelOnActionClick": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["executor.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["recorder.js"],
      "matches": ["<all_urls>", "http://*/*", "https://*/*", "file:///*"]  
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
